root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
end_of_line = crlf
trim_trailing_whitespace = true
max_line_length = 120

[*.{js,ts}]
quote_type = single
curly_bracket_next_line = false
spaces_around_brackets = inside
indent_brace_style = BSD KNF

[*.html]
quote_type = double

[*.md]
max_line_length = off
trim_trailing_whitespace = false
